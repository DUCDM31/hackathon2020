<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_post"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/linearName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/avatar"
            app:civ_border_color="@color/start_color"
            app:civ_border_width="1dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circular_bold"
                android:textColor="#232323"
                android:textSize="13sp"
                android:text="Nguyễn Mạnh Hùng" />

            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circular_book"
                android:text="01 phút trước"
                android:textColor="#232323"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linearName"
        android:layout_marginVertical="15dp"
        android:background="#ccc" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:ellipsize="end"
        android:fontFamily="@font/circular_book"
        android:lineSpacingExtra="6sp"
        android:maxLines="5"

        android:text="At vero eos et accusamus et iusto odio dignissimos duci
mus qui blanditiis praesentium voluptatum deleniti atque
corrupti quos dolores et quas molestias excepturi sint
occaecati cupiditate non provident, similique sunt in
culpa qui officia deserunt mollitia animi, id est laborum..."
        android:textColor="#232323"
        android:textSize="12sp" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text"
        android:layout_marginVertical="15dp"
        android:background="#ccc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tag_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/button_unselect"
            android:fontFamily="@font/circular_medium"
            android:padding="5dp"
            android:text="COVID-19"
            android:textSize="10sp"
            android:textColor="#232323"
            />

        <TextView
            android:id="@+id/tag_view_2"
            android:textColor="#232323"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tag_view_1"
            android:background="@drawable/button_unselect"
            android:fontFamily="@font/circular_medium"
            android:padding="5dp"

            android:text="Học đường"
            android:textSize="10sp"
             />

        <TextView
            android:id="@+id/tag_view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tag_view_2"
            android:background="@drawable/button_unselect"
            android:fontFamily="@font/circular_medium"
            android:padding="5dp"
            android:text="Sức khỏe"
            android:textColor="#232323"
            android:textSize="10sp"
             />

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/circular_medium"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Xem thêm"
            android:textColor="@color/start_color"
            android:textSize="12sp" />

    </RelativeLayout>
</RelativeLayout>