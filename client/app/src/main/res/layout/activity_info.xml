<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/back"
            android:tint="@color/start_color" />
    </LinearLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/circular_bold"
        android:text="Hãy cho chúng tôi biết họ và tên của bạn nhé!"
        android:textColor="#000"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/circular_book"
        android:text="Họ và tên"
        android:textColor="#232323"
        android:textSize="12sp" />


    <EditText
        android:id="@+id/edName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/circular_book"
        android:hint="Ví dụ: Nguyễn Văn A"
        android:textColor="#232323"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/btnTerm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:buttonTint="@color/start_color"
        android:fontFamily="@font/circular_medium"
        android:text="Tôi đồng ý với các điều khoản của ứng dụng này." />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner_button_unselected"
        android:fontFamily="@font/circular_medium"
        android:text="Tiếp tục"
        android:textColor="#ccc"
        android:textSize="14sp" />

</LinearLayout>