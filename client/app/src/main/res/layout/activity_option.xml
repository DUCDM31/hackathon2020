<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circular_bold"
            android:text="Tùy chỉnh"
            android:textColor="#232323"
            android:textSize="17sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!--nội dung-->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/circular_bold"
                        android:text="Nội dung"
                        android:textColor="#232323"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/circular_bold"
                        android:text=" *"
                        android:textColor="@color/start_color" />
                </LinearLayout>


                <EditText
                    android:id="@+id/edStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_post"
                    android:fontFamily="@font/circular_book"
                    android:gravity="top|left"
                    android:hint=""
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:maxLines="10"
                    android:minLines="6"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:textSize="14dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="15dp"
                    android:background="#ccc" />
            </LinearLayout>
            <!-- chủ đề -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/circular_bold"
                        android:text="Chọn 3 chủ đề"
                        android:textColor="#232323"
                        android:textSize="13sp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/circular_bold"
                        android:text=" *"
                        android:textColor="@color/start_color" />
                </LinearLayout>


                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tag1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/button_unselect"
                            android:fontFamily="@font/circular_medium"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:text="COVID-19"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tag2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/button_unselect"
                            android:fontFamily="@font/circular_medium"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:text="Sức khỏe"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tag3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/button_unselect"
                            android:fontFamily="@font/circular_medium"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:text="Gia đình"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tag4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/button_unselect"
                            android:fontFamily="@font/circular_medium"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:text="Tình yêu"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tag5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/button_unselect"
                            android:fontFamily="@font/circular_medium"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:text="Học đường"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tag6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/button_unselect"
                            android:fontFamily="@font/circular_medium"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:text="Khác"
                            android:textSize="14dp" />

                    </LinearLayout>
                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="15dp"
                    android:background="#ccc" />
            </LinearLayout>

            <!--nâng cao-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circular_bold"
                    android:text="Nâng cao"
                    android:textColor="#232323"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/btnSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circular_medium"
                            android:text="Đăng ẩn danh"
                            android:textColor="#232323"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circular_book"
                            android:maxWidth="200dp"
                            android:text="Mọi người sẽ không nhìn thấy thông tin cá nhân của bạn"
                            android:textColor="#232323"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="2dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="15dp"
                    android:background="#ccc" />
            </LinearLayout>
            <!--xem trước-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circular_bold"
                    android:text="Xem trước"
                    android:textColor="#232323"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner_post"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/avatar"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/avatar"
                            app:civ_border_color="@color/start_color"
                            app:civ_border_width="1dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/circular_bold"
                                android:textColor="#232323" />

                            <TextView
                                android:id="@+id/timestamp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/circular_book"
                                android:text="01 phút trước"
                                android:textColor="#232323"
                                android:textSize="10dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/Name"
                        android:layout_marginVertical="15dp"
                        android:background="#ccc" />

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view1"
                        android:ellipsize="end"
                        android:fontFamily="@font/circular_book"
                        android:lineSpacingExtra="6sp"
                        android:maxLines="5"
                        android:textColor="#232323"
                        android:textSize="12dp" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/text"
                        android:layout_marginVertical="15dp"
                        android:background="#ccc" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view2"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tag_view_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/button_unselect"
                            android:fontFamily="@font/circular_medium"
                            android:padding="5dp"
                            android:textColor="#232323"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/tag_view_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/tag_view_1"
                            android:background="@drawable/button_unselect"
                            android:fontFamily="@font/circular_medium"
                            android:padding="5dp"
                            android:textColor="#232323"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/tag_view_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/tag_view_2"
                            android:background="@drawable/button_unselect"
                            android:fontFamily="@font/circular_medium"
                            android:padding="5dp"
                            android:textColor="#232323"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/tvMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/circular_medium"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="Xem thêm"
                            android:textColor="@color/start_color"
                            android:textSize="12dp" />

                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <!--Đăng-->
            <Button
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/corner_button_unselected"
                android:enabled="false"
                android:fontFamily="@font/circular_medium"
                android:text="Đăng lên cộng đồng"
                android:textColor="#ccc" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>